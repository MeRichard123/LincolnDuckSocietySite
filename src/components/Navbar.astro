        </div>
        <!-- Nav Links -->
        <div class="text-sm flex items-center">
            <a href="#" class="link font-montserrat mx-6">Home</a>
            <a href="#" class="link font-montserrat mx-6">Gallery</a>
            <a href="#" class="link font-montserrat mx-6">Contact</a>
        </div>
    </nav>
</div>
<style>
    .scrolled{
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }

    .link{
        color: black;
        text-decoration: none;
        background-image: linear-gradient(#000, #000);
        background-size: 0% 0.1em;
        background-position-y: 100%;
        background-position-x: 0%;
        background-repeat: no-repeat;
        transition: background-size 0.2s ease-in-out;
    }
    .link:hover,
    .link:focus,
    .link:active{
        background-size: 100% 0.1em;
    }
</style>
<script>
    let options = {
        root: null,
        rootMargin: '0px',
        threshold: 0.2
    }
    const nav = document.querySelector("#nav") as HTMLElement;

    let observer = new IntersectionObserver((entries, observer)=>{
        entries.forEach(entry => {
            console.log(entry)
            if(entry.isIntersecting){
                if (entry.intersectionRatio > 0.2){
                    nav?.classList.add("scrolled")
                }
            }else{
                nav?.classList.remove("scrolled")
            }
        })
    }, options);

    const elementsToObserve = document.querySelectorAll(".observeMe");
    elementsToObserve.forEach((element: Element)=>{
        observer.observe(element);
    })
</script>