---
import Layout from '../layouts/Layout.astro';
---
<Layout title="The Lincoln Duck Society">
		<section class="w-full h-screen grid place-items-center">
			<div class="md:grid md:grid-cols-2 w-full md:place-items-center md:text-left text-center mt-5 mobile">
			<aside class="md:ml-auto w-3/5">
					<h1 class="font-merriweather mb-4">Welcome,</h1>
					<h2 class="font-cormorant">To the Lincoln Duck Society where ducks come together.</h2>
					<button class="my-4 bg-dark py-2 px-9 text-sm text-white">Join</button>
				</aside>
				<aside class="ml-auto grid place-items-center">
					<img class="w-2/5" src="/assets/duck-placeholder.jpg" alt="">
				</aside>
			</div>
		</section>
		<section class="observeMe h-[200vh] bg-duckPattern bg-center bg-no-repeat">
			
		</section>
</Layout>
